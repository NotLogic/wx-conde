/* pages/detail/detail.wxss */
.detail-container{
  font-size: 16px;
  color: #333;
  background-color: #efefef;
}
.user-name{
  font-size: 14px;
  font-weight: bold;
}
/* 内容 */
.detail-content{
  padding: 20px;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
  background-color: #fff;
}
.user-card{
  position: relative;
  height: 60px;
}
/* 头像 */
.user-avatar{
  float: left;
  width: 60px;
  height: 60px;
}
/*  */
.user-data{
  position: absolute;
  left: 60px;
  right: 50px;
  height: 60px;
}
/* 收藏 */
.collection-container{
  float: right;
  width: 50px;
}

.detail-content-title{
  font-weight: bold;
}
